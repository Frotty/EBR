public enum Emode
	NONE
	REPEATING
	ONESHOT
	LEVER
	PRESSUREPLATE

public enum Amode
	NONE
	OPENDOOR
	CLOSEDOOR
	TOGGLEDOOR
	CREATEUNIT
	MOVEUNIT
	CHANGETERRAIN

	
