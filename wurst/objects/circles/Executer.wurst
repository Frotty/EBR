	constant int ESCAPER_TRIGGER_ABIL = 'A009'
	constant int BOTH_TRIGGER_ABIL = 'A014'
	
	constant int TERRAIN_WALKABLE_ABIL = 'A015'
	constant int TERRAIN_UNWALKABLE_ABIL = 'A016'
