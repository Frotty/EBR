	constant int TERRAIN_INCREASE_V_ABIL = 'A01M'
	constant int TERRAIN_DECREASE_H_ABIL = 'A01U'
	constant int TERRAIN_DECREASE_V_ABIL = 'A01T'
	constant int TERRAIN_BOOK_ABIL = 'A06B'
	
	constant int DOOR_OPEN_ABIL = 'A018'
