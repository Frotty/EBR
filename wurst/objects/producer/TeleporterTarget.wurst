package TeleporterTarget
import SetupObject
import ChannelAbilityPreset

public constant TELEPORTER_TARGET_ID = 'wisp'

public class TeleporterTarget extends SetupObject
	
	construct(vec2 pos, player owner)
		super(getUnit(owner, TELEPORTER_TARGET_ID, pos, angle(0), this), getUnit(owner, TELEPORTER_TARGET_ID, pos, angle(0), this), 0.)

	override function serialize() returns Json
		let json = super.serialize()
		json
		..addProperty(new Property(KEY_TYPE, TP_TARGET_INDEX.toString()))
		return json

	override function setEnabled(boolean b)

@objectgen function genTarget()
	new UnitDefinition(TELEPORTER_TARGET_ID, 'ushd')
	..setAttacksEnabled(0)
    ..setTargetedAs("air")
    ..setAnimationBlendTimeseconds(0)
	..setAnimationCastBackswing(0)
	..setAnimationCastPoint(0)
	..setIconGameInterface("ReplaceableTextures\\CommandButtons\\BTNWisp.blp")
	..setModelFile("units\\nightelf\\Wisp\\Wisp.mdl")
	..setSelectionScale(1.5)
	..setTintingColorRed(0)
	..setTintingColorGreen(0)
    ..setUnitSoundSet("")
	..setCollisionSize(0)
	..setSpeedBase(180)
	..setMovementHeight(0)
	..setTurnRate(999)
	..setMovementType(MovementType.Fly)
	..setNormalAbilities(int2fourchar('A031') + "," +
	int2fourchar('A01F') + "," +
